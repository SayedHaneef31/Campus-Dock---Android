<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginBottom="12dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:backgroundTint="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/foodImageCard"
            android:layout_width="82dp"
            android:layout_height="82dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="18dp"
            app:strokeWidth="0dp"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/foodImageIdddd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/burger" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/foodNameIddddd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Burger"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/foodImageCard"
            app:layout_constraintTop_toTopOf="@id/foodImageCard"
            app:layout_constraintEnd_toStartOf="@id/actionContainer"
            app:layout_constraintHorizontal_bias="0"/>

        <LinearLayout
            android:id="@+id/ratingRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/foodImageCard"
            app:layout_constraintTop_toBottomOf="@id/foodNameIddddd">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_star"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:id="@+id/foodRatingIddddd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="4.2"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <TextView
            android:id="@+id/foodPriceIddddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:text="â‚¹ 60"
            android:textColor="?attr/colorOnSurface"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/foodImageCard"
            app:layout_constraintTop_toBottomOf="@id/ratingRow"/>

        <FrameLayout
            android:id="@+id/actionContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddIddddddd"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="108dp"
                android:layout_height="40dp"
                android:text="Add"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                app:backgroundTint="@color/light_gray" />

            <LinearLayout
                android:id="@+id/quantitySelector"
                android:layout_width="108dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:background="@drawable/quantity_selector_bg">

                <ImageButton
                    android:id="@+id/btnMinusIdddd"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/rounded_button_bg"
                    android:contentDescription="Decrease"
                    android:src="@drawable/ic_minus"
                    android:tint="@android:color/white" />

                <TextView
                    android:id="@+id/quantityIddddd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="1"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnSurface" />

                <ImageButton
                    android:id="@+id/btnPlusIddddd"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/rounded_button_bg"
                    android:contentDescription="Increase"
                    android:src="@drawable/ic_plus"
                    android:tint="@android:color/white" />
            </LinearLayout>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>